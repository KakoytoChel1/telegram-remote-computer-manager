                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock
                                Text="Basic and necessary information about the application"
                                VerticalAlignment="Center"
                                Margin="20,0,0,0"
                                FontSize="17"
                                FontWeight="SemiBold"/>

                            <StackPanel Grid.Row="1">
                                <Expander Header=" 1. How to create a bot ?"
                                          Cursor="Hand"
                                          Style="{DynamicResource MyCoolExpanderStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Foreground="White"
                                                       TextWrapping="Wrap"
                                                       Grid.Row="0"
                                                       Margin="10,15,0,0">
