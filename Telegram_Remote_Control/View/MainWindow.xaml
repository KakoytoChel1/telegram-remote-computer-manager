                                                            Grid.Column="2"
                                                            Style="{DynamicResource TransparentButtonsStyle}"
                                                            Margin="0,5,0,0"
                                                            Visibility="Hidden"
                                                            Command="{Binding ElementName=mainWindow, Path=DataContext.RemoveWhiteListItemCommand}">
                                                                    <Image Source="Assets/delete.png" Width="20"/>
                                                                </Button>
                                                                <Button
                                                            x:Name="EditWhiteList"
                                                            Grid.Column="2"
                                                            Grid.Row="1"
                                                            Margin="0,0,0,5"
                                                            Style="{DynamicResource TransparentButtonsStyle}"
                                                            Visibility="Hidden">
                                                                    <Image Source="Assets/edit2.png" Width="20"/>

                                                                    <Button.Triggers>
                                                                        <EventTrigger RoutedEvent="Button.Click">
                                                                            <EventTrigger.Actions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard TargetProperty="Height" Target="{Binding ElementName=EditWhiteListItem}">
                                                                                        <DoubleAnimation
                                                                                    From="0"
                                                                                    To="180"
                                                                                    Duration="0:0:0.1"/>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </EventTrigger.Actions>
                                                                        </EventTrigger>
                                                                    </Button.Triggers>
                                                                </Button>
                                                            </Grid>
                                                        </Border>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" TargetName="bd" Value="#1f2023"/>
                                                            </Trigger>
                                                            <Trigger Property="Selector.IsSelected"  Value="True">
                                                                <Setter Property="Background" TargetName="bd" Value="#27292d"/>
                                                                <Setter Property="Visibility" TargetName="RemoveWhiteList" Value="Visible"/>
                                                                <Setter Property="Visibility" TargetName="EditWhiteList" Value="Visible"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.Resources>

                                </ListBox>

                                <TextBlock
                                    Text="List is empty, add something!"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="LightGray">

                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=whitelistBox, Path=HasItems}" Value="True">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>

                                </TextBlock>

                                <!--this button opens the sub menu to create new file command-->
                                <Button
                                    Cursor="Hand"
                                    Style="{DynamicResource RoundColorButtonStyle}"
                                    Grid.Row="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,20,20"
                                    Height="50"
                                    Width="50"
                                    Background="{StaticResource mainStyleColor}">

                                    <Image
                            Source="Assets/AddSomething.png"
                            Width="30"/>

                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="Button.Click">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard TargetProperty="Height" TargetName="AddWhiteListItem">
                                                        <DoubleAnimation
                                                    From="0"
                                                    To="180"
                                                    Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </Border>

                        <!--sub menu WhiteList (Add)-->
                        <Border
                             x:Name="AddWhiteListItem"
                             Height="0"
                             Grid.Row="3"
                             Grid.ColumnSpan="2"
                             VerticalAlignment="Bottom"
                             Background="#1f2023">
                            <Grid
                                Height="160"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="60"/>
                                </Grid.RowDefinitions>

                                <TextBlock
                                Text="UserName"
                                Height="auto"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Grid.Column="0"
                                FontSize="14"/>

                                <TextBox Style="{DynamicResource RoundDarkTextBoxStyle}"
                                Width="280"
                                Margin="10,0,0,0"
                                Grid.Column="1"
                                Text="{Binding NewUserName, UpdateSourceTrigger=PropertyChanged}"/>

                                <StackPanel
                                Orientation="Horizontal"
                                Grid.ColumnSpan="3"
                                Grid.Row="2">


                                    <!--cancel button-->
                                    <Button
                                        Style="{DynamicResource RoundColorButtonStyle}"
                                        Height="35"
                                        Cursor="Hand"
                                        Width="100"
                                        Margin="0,0,0,0"
                                        Content="Cancel"
                                        Background="Red">

                                        <Button.Triggers>
                                            <EventTrigger RoutedEvent="Button.Click">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard TargetProperty="Height" TargetName="AddWhiteListItem">
                                                            <DoubleAnimation
                                                    From="180"
                                                    To="0"
                                                    Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                        </Button.Triggers>

                                    </Button>

                                    <!--create button-->
                                    <Button Style="{DynamicResource RoundColorButtonStyle}"
                                    Height="35"
                                    Width="100"
                                    Cursor="Hand"
                                    Margin="20,0,0,0"
                                    Command="{Binding AddWhiteListItemCommand}"
                                    Content="Add"
                                    Background="Green">

                                        <Button.Triggers>
                                            <EventTrigger RoutedEvent="Button.Click">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard TargetProperty="Height" TargetName="AddWhiteListItem">
                                                            <DoubleAnimation
                                                    From="180"
                                                    To="0"
                                                    Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                        </Button.Triggers>
                                    </Button>

                                </StackPanel>

                            </Grid>
                        </Border>

                        <!--sub menu WhiteList (Edit)-->
                        <Border
                        x:Name="EditWhiteListItem"
                        Height="0"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Bottom"
                        Grid.RowSpan="2"
                        Background="#1f2023"
                        DataContext="{Binding SelectedWhiteListItem}">
                            <Grid
                            Height="160"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="60"/>
                                </Grid.RowDefinitions>

                                <TextBlock
                                Text="UserName"
                                Height="auto"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Grid.Column="0"
                                FontSize="14"/>

                                <TextBox Style="{DynamicResource RoundDarkTextBoxStyle}"
                                Width="280"
                                Margin="10,0,0,0"
                                Grid.Column="1"
                                Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>


                                <StackPanel
                                Orientation="Horizontal"
                                Grid.ColumnSpan="3"
                                Grid.Row="2">


                                    <!--cancel button-->
                                    <Button
                                    Style="{DynamicResource RoundColorButtonStyle}"
                                    Height="35"
                                    Width="100"
                                    Margin="0,0,0,0"
                                    Content="Cancel"
                                    Background="Red">

                                        <Button.Triggers>
                                            <EventTrigger RoutedEvent="Button.Click">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard TargetProperty="Height" TargetName="EditWhiteListItem">
                                                            <DoubleAnimation
                                                    From="180"
                                                    To="0"
                                                    Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                        </Button.Triggers>

                                    </Button>

                                    <!--update button-->
                                    <Button Style="{DynamicResource RoundColorButtonStyle}"
                                    Height="35"
                                    Width="100"
                                    Margin="20,0,0,0"
                                    Command="{Binding ElementName=mainWindow, Path=DataContext.EditWhiteListItemCommand}"
                                    Content="Update"
                                    Background="Orange">

                                        <Button.Triggers>
                                            <EventTrigger RoutedEvent="Button.Click">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard TargetProperty="Height" TargetName="EditWhiteListItem">
                                                            <DoubleAnimation
                                                    From="180"
                                                    To="0"
                                                    Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                        </Button.Triggers>
                                    </Button>

                                </StackPanel>

                            </Grid>
                        </Border>

                    </Grid>
                </TabItem>

                
